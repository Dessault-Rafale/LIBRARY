    <link rel="stylesheet" href="/css/library.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Add Book</title>
</head>
<body>
    <div class="navbar">
        <ul class="items">
            <li><a href="/">HOME</a></li>
            <li><a href="/Book/addbook">ADD BOOK</a></li>
            <li><a href="/Book/view-book">VIEWBOOK</a></li>
            <li><a href="/Author/addbook/addauthor">ADD AUTHOR</a></li>
            <li><a href="/Author/view-author">VIEWAUTHOR</a></li>
            <li><a href="/registerlogin">LOGIN</a></li>
            <li><a href="/register" class="play">SIGN UP</a></li>
            <li><a href="/Register/view-register" class="play">VIEWREGISTER</a></li>


        </ul>
    </div>
    <div class="middle">
        <div class="gem">
            <img src="https://toppng.com/uploads/preview/book-icon-book-icon-11563642450he58ixg4u9.png" class="image"
                alt=""></i><span class="key1">Library app</span>
        </div>
        <div class="box"></div>
    </div>
    <div  style="background-color: rgb(198, 7, 7); height: 550px; width: 700px; margin-left: 400px; margin-top: 100px; border: 5px solid black;">

        <form action="/Book/update-book" method="post" enctype="multipart/form-data">
            <center>
                <br>
                <img src="/images/<%=data.Image%>" style="height: 200px; width: 200px;" alt=""><br> <br>
                <label style="margin-left:-50px;">Author Name:  </label>
                <input type="text" name="title" value="<%=data.AuthorName%>" placeholder="Enter authorname" style="height: 30px; width: 300px;"><br> <br>
                <label style="margin-left:-25px;">Book Description:</label>
                <input type="text"  name="category"  value="<%=data.BookDescription%>"  placeholder="Enter category" style="height: 30px; width: 300px;"><br> <br>
                <input type="text"  name="id"  value="<%=data._id%>"  hidden>
                <label style="margin-left:-60px;">Book Name:</label>
                <input type="text"  name="Book" value="<%=data.BookName%>" placeholder="Enter the bookname" style="height: 30px; width: 300px;"> <br><br>
                <label style="margin-left:-60px;">Image:</label>
                <input type="file" placeholder="<%=data.Image%>" name="image"  style="height: 30px; width: 300px; background: rgb(252, 252, 252);"><br><br>
                <input type="submit"  value="Add"  style=" background: rgb(161, 12, 12); height: 30px; width: 100px;">
            </center>
        </form>




    </div>
    
</body>
